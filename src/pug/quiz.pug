doctype html
html(lang="ja")
  head 
    include _html_header
    title Quiz
    link(rel="stylesheet", href="css/quiz.css")
  body 
    header
      figure
        a(href="index.html") 
          img(src="img/arrow.svg", alt="")
      h1 クイズ
    main
      .search_bar 
        a(href="#"): img(src="img/search.svg", alt="")
        input(type="text" placeholder="他の資格を探す")
      .current 
        h2 選択中の資格
        .wrapper 
          figure: img(src="img/html5_logo.svg", alt="")
      .level 
        h2 資格のレベル
        .level_wrap 
          p: a(href="quiz_top.html") レベル1
          p: a(href="#")  レベル2
          .empty_box 
            .line 
            a(href="#") 
      .change 
        h2 資格の変更
        .change_wrap 
          .card 
            figure.html 
              a(href="#") 
                img(src="img/html5_logo.svg", alt="")
          .card 
            figure.shikisai 
              a(href="#") 
                img(src="img/shikisai_logo.png", alt="")
          .card 
            figure.it 
              a(href="#") 
                img(src="img/itpass_logo.png", alt="")
    include _main_footer
    include _html_footer